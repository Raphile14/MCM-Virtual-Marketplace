<html lang="en">
    <head>
        <%- include('../partials/head'); %>
        <title> Product - MCM Virtual Marketplace </title>
    </head>
    <body style="background:white">
        <header>
            <%- include('../partials/header'); %>
        </header>

        <main>
            <br><br>

            <table class="product">
                <tr>
                    <td rowspan="4" class="product">
                        <img src="../../images/logo.png" alt="logo" width="435" height="519">
                    </td>
                    <td class="product">
                        <input name ="" type="text" class="txt_login" style="width:100%" placeholder="Product Name">
                    </td>
                </tr>
                <tr>
                    <td class="product">
                        <input name ="" type="number" class="txt_product" placeholder="Price">
                        <input name ="" type="number" class="txt_product" placeholder="Qty.">
                        <select name="" id="" class="product_avail">
                            <option value="" disabled selected>Availability</option>
                            <option value="Male">Available</option>
                            <option value="Female">Sold</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td class="product">
                        <textarea id="" name="" class="product" placeholder="Description"></textarea>
                    </td>
                </tr>
                <tr>
                    <td colspan="1" class="product">
                        <form method="post" enctype="multipart/form-data">
                            <input type="file" name="filetoupload" value="Upload Photo">
                            <input type="button" value="Save Product" id="saveProduct">
                            <input type="button" value="Delete" id="deleteProduct">
                        </form>
                    </td>
                </tr>
            </table>

            <div id="myModal" class="modal">
                <div class="modal-content">
                  <span class="close">&times;</span>
                  <!-- IF saveProduct is pressed -->
                  <p>Product saved.</p>
                  <!-- ELSE -->
                  <p>Are you sure you want to delete this product?</p>
                  <input type="button" value="Yes, I'm Sure" id="deleteProduct">
                </div>
            </div>

        </main>

        <br><br>

        <footer>
            <%- include('../partials/footer'); %>
        </footer>

        <script>
            var modal = document.getElementById("myModal");
            var btn = document.getElementById("saveProduct");
            var span = document.getElementsByClassName("close")[0];
            btn.onclick = function() {
              modal.style.display = "block";
            }
            span.onclick = function() {
              modal.style.display = "none";
            }
            window.onclick = function(event) {
              if (event.target == modal) {
                modal.style.display = "none";
              }
            }
        </script>
            
    </body>
</html>