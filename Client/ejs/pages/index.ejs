<html lang="en">
    <head>
        <%- include('../partials/head'); %>
        <title> MCM Virtual Marketplace </title>
    </head>
    <body style="background:white">
        <header>
            <%- include('../partials/header'); %>
        </header>

        <main>
            <ul class="menu">
                <li class="menu"><a href="/">All Categories</a></li>
                <li class="menu"><a href="/">Health & Beauty</a></li>
                <li class="menu"><a href="/">Food</a></li>
                <li class="menu"><a href="/">Digital Products</a></li>
                <li class="menu"><a href="/">Electronics</a></li>
            </ul>

            <table>
                <tr>
                    <td>
                        <input class="txt_login" type="text">
                        <input class="btn_search" type="button" value="Search">
                    </td>
                </tr>
            </table>

            <br><br>    
            
            <% if (products.length != 0) { %>
                <p class="profile_products">Products On Sale </p>
            <% } else { %>
                <p class="profile_products">No Products On Sale </p>
            <% } %>
            
            <div class="container">
                <div class="row">
                    <% for (let x = 0; x < products.length; x++) { %>
                        <%- include('../partials/browse_catalog', {products: products[x]}); %>
                    <%} %>
                </div>                
            </div> 

        </main>

        <br><br>

        <footer>
            <%- include('../partials/footer'); %>
        </footer>
    </body>
</html>