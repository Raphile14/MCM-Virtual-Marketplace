
<tr>
    <% if (existingTicket.isSold) { %>
        <td class="admin" style="background-color: green;"> <%= x %> </td>
    <% } else { %>
        <td class="admin" style="background-color: red;"> <%= x %> </td>
    <% } %>        
    <td class="admin"> <%= existingTicket.date %> </td>
    <td class="admin"> <%= existingTicket.productName %> </td>
    <td class="admin"> <a target="_blank" href="/profile/<%= existingTicket.buyerID %>"> <%= existingTicket.buyerEmail %> </a> </td>
    <td class="admin"> <%= existingTicket.quantity %> </td>
    <td class="admin"> â‚±<%= existingTicket.totalPrice %> </td>    
    <% if (isStatus) { %> 
        <% if (existingTicket.isSold) { %>
            <td class="admin"> Sold </td>
        <% } else { %>        
            <td class="admin"> Waiting </td>                               
        <% } %>
    <% } else { %> 
        <% if (existingTicket.isSold) { %>
            <td class="admin"> Sold </td>
        <% } else { %>        
            <form class="form_inline" action="/approve/<%= existingTicket._id %>">
                <td class="admin"> <input class="btn_admin" type="submit" value="Confirm Purchase"> </td>
            </form>                                 
        <% } %>
    <% } %>     
    <td class="admin"> 
        <% if (isStatus) { %>
            <% if (existingTicket.isSold) { %>
                <p class="admin"> Receipt Sent to Email </p>    
            <% } else { %>
                <p class="admin"> Receipt Not Available </p>    
            <% } %>
        <% } else { %>
            <form class="form_inline" method="POST">
                <input type="hidden" name="ticketID" value="<%= existingTicket._id %>">
                <% if (existingTicket.isSold) { %>
                    <input type="submit" class="btn_catalog" value="Download">
                <% } else { %>        
                    <input type="button" value="Download" style="background-color: grey;" class="btn_catalog" disabled>                    
                <% } %>
            </form>
        <% } %>
                            
    </td>
</tr>
